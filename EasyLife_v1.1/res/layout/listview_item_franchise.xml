<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_root"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingRight="1dp" >

    <RelativeLayout
        android:id="@+id/relative_franchise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/franchiseItemHeight"
        android:background="@drawable/store_list_selector" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_franchise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txtFranchiseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tab_button_1" />
    </RelativeLayout>

</LinearLayout>